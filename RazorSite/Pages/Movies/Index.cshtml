@page
@model IndexModel

@{
    ViewData["Title"] = "MoviesIndex";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h1>Movies Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieList[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieList[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MovieList)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MovieId">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.MovieId">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
